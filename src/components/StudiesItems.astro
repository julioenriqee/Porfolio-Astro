---
import Linkbutton from './Linkbutton.astro';

interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
}
const { date, title, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-white"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-black dark:text-white"
  >{date}</time
>
<h3 class="text-lg font-semibold text-yellow-500 dark:text-yellow-200 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-black mt-2 dark:text-white">
  {description}
</p>
